<div class="col-md-6 order-md-3">
  <% provide(:title, "Change your password") %>
  <div class="center">
    <h1>Change your password</h1>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div id="error_explanation" class="col-md-12">
      <%= devise_error_messages! %>
    </div>
    <%= f.hidden_field :reset_password_token %>

    <div class="col-md-12">
      <div>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password", :class => "form-control"  %>
      </div>

      <div>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", :class => "form-control"  %>
      </div>

      <div class="actions shared_links">
        <%= f.submit "Change my password", class: "btn btn-large btn-primary" %>
      </div>
      <%= render "users/shared/links" %>
    </div>
  <% end %>

</div>

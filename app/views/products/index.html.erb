<div>
  <% content_for(:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
  <% end %>
  <h1>Products</h1>

  <ul>
    <% @products.each do |product| %>
      <li>
        Name: <%= link_to product.name, product_path(product) %>
        <%= render "list", product: product %>
      </li>
    <% end %>
  </ul>
</div>
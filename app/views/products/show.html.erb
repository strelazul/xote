<div>
  <h1><%= @product.name %></h1>

  <% if @product.image.attached? %>
    <%= image_tag url_for(@product.image.variant(resize_to_limit: [nil,
                                                                     300]).processed) %>
  <% end %>
  <ul>
    <li>
      Description: <%= @product.description %>
    </li>
    <li>
      Price: $<%= @product.price %>
    </li>
    <li>
      Category: <%= @product.category.name %>
    </li>

  </ul>
</div>

<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>
<div class="d-flex flex-column justify-content-center col-md-7 offset-md-3 main">
  <h1><%= @product.name %></h1>

  <% if @product.image.attached? %>
    <%= image_tag url_for(@product.image.variant(resize_to_limit: [nil,
                                                                     300]).processed) %>
  <% end %>
  <ul>
    <li>
      Description: <%= @product.description %>
    </li>
    <li>
      Price: $<%= @product.price %>
    </li>
    <li>
      Category: <%= @product.category.name %>
    </li>

  </ul>
</div>

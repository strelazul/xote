<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>
<div class="d-flex flex-column justify-content-center col-md-7 offset-md-3 main">
  <div class="row">
    <h1><%= @category.name %></h1>
    Description: <%= @category.description %>
  </div>
  <% @category.products.each do |product| %>
    <div class="row">
      Name: <%= link_to product.name, product_path(product) %>
      <%= render "./products/list", product: product %>
    </div>
  <p> &nbsp; </p>
  <% end %>
</div>
